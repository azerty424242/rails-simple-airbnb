<%= simple_form_for @flat do |form| %>
  <%= form.input :name %>
  <%= form.input :address %>
  <%= form.input :description, as: :text %>
  <%= form.input :price_per_night %>
  <%= form.input :number_of_guests %>
  <%= form.input :picture_url %>

  <%= form.button :submit, "Update Flat",
      class: "btn btn-primary mt-3" %>
<% end %>


