<div class="container margin-top-negative mt-5">
  <div class="row">
    <div class="col-8">
      <div class="mb-3">
        <%= link_to "<= Go back to all flats", flats_path,
            class: "text-primary" %>
      </div>
      <div class="card bg-light mb-4">
        <div class="card-body">
          <h1 class="card-title"><%= @flat.name %></h1>
          <p class="card-text"><%= @flat.address %></p>
          <img src="<%= @flat.picture_url %>" alt="<%= @flat.name %> Image"
              class="img-fluid">
        </div>
      </div>
      <div class="card bg-light mb-4">
        <div class="card-body">
          <h3 class="card-title">A bit more about this flat...</h3>
          <p class="card-text"><%= @flat.description %></p>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="card bg-light p-3 mb-4">
        <h5>Book this place!</h5>

        <form action="">
          <div class="input-group">
            <span class="input-group-text" id="start-date-label">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017"
                aria-label="start-date" aria-describedby="start-date-label">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-text" id="end-date-label">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017"
                aria-label="end-date" aria-describedby="start-date-label">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2"
                  style="width: 100%">
        </form>
      </div>
      <div class="card bg-light p-3 mb-4">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <%= @flat.number_of_guests %> people
          </div>
          <div class="flex ms-3">
            <%= @flat.price_per_night %>â‚¬
          </div>
        </div>
      </div>
      <div class="card bg-light p-3 mb-4">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>

          <div class="flex">
            <i class="fab fa-facebook-square me-2"></i>
            <i class="fab fa-twitter-square me-2"></i>
            <i class="fab fa-pinterest-square me-2"></i>
          </div>
        </div>
      </div>

      <%= link_to "Delete", flat_path(@flat), class: "btn btn-danger",
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      <%= link_to "All Flats", flats_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>



